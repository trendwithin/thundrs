<div class="row">
  <div class="large-12 columns">
    <div class="panel">
      <%= form_for([@memory,@comment]) do |f| %>
        <h5>Add Comment</h5>
        <div class="field">
          <%= f.label :body, class: "form-label" %><br />
          <%= f.text_area :body %>
        </div>
        <div class="actions">
          <%= f.submit "Save", id: "comment_save", class: "button round" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
