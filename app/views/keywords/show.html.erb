<div class="row">
  <div class="small-10 columns">
    <h2>Memories associated with "<%= @keyword.word %>"</h2>
  </div>
</div>
<div class="row">
  <div class="small-10 columns">

    <div class="row">
      <% @memories.each do |memory| %>
        <div class="small-6 medium-4 large-3 columns memory" id="memory-<%= memory.id %>">
          <%= link_to(image_tag(memory.image.url(:medium)), memory) %>
        </div>
      <% end %>
    </div>

  </div>
</div>
