<h1>Listing Memories</h1>
<div class="large-12 columns">
  <div class="row">

    <% @memories.each do |memory| %>
    <div class="large-4 small-6 columns memory" id="memory-<%= memory.id %>">
      <%= link_to image_tag(memory.image.url, class: "memory-image"), memory %>


      <div class="panel">
        <h5><%= memory.name %></h5>
        <h6 class="subheader"><%= memory.keywords %></h6>
      </div>
    </div>
    <% end %>
  </div>
</div>

<div class="large-12 columns">
  <div class="row">
    <% @replies.each do |replies, memory| %>
      <div class="large-4 columns">
        <%= link_to image_tag(memory.image.url, class: "memory-image"), memory %>
      </div>

      <div class="large-8 columns">


          <% replies.each do |reply| %>
            <div class="comment">
              <div class="row">
                <div class="small-6 columns">
                  <%= reply.author.username %>
                </div>
                <div class="small-6 columns">
                  <%= reply.created_at.strftime("%d/%m/%Y") %>
                </div>
              </div>

              <div class="row">
                <div class="small-12 columns">
                  <%= reply.body %>
                </div>
              </div>

              <div class="row">
                <div class="small-6 columns">
                  <%= form_for([reply.memory, reply]) do |f| %>
                    <%= f.submit 'Accept' %>
                    <%= f.hidden_field :approved, value: true %>
                  <% end %>
                </div>
                <div class="small-6 columns">
                  <%= form_for([reply.memory, reply]) do |f| %>
                    <%= f.hidden_field :approved, value: true %>
                    <%= f.submit 'Delete', method: :delete, data: { confirm: 'Are you sure?' } %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<%= link_to 'New Memory', new_memory_path %>
