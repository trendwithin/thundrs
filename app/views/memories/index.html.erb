<h1>Listing Memories</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Keywords</th>
      <th>Description</th>
      <th>Creator</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @memories.each do |memory| %>
      <tr class="memory" id="memory-<%= memory.id %>">
        <td><%= image_tag memory.image.url, class: "memory-image" %></td>
        <td><%= memory.name %></td>
        <td><%= memory.keywords %></td>
        <td><%= memory.description %></td>
        <td><%= memory.creator %></td>
        <td><%= link_to 'Show', memory %></td>
        <td><%= link_to 'Edit', edit_memory_path(memory) %></td>
        <td><%= link_to 'Destroy', memory, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>

    <% @replies.each do |reply| %>
      <tr>
        <td><%= reply.body %></td>
        <td><%= reply.author %></td>
      <td>

      <%= form_for([reply.memory, reply]) do |f| %>
        <div class="actions">
          <%= f.submit 'Accept' %>
          <%= f.hidden_field :approved, value: true %>
        </div>
      <% end %>
      </td>

      <td>
      <%= form_for([reply.memory, reply]) do |f| %>
        <div class="actions">
          <%= f.hidden_field :approved, value: true %>
          <%= f.submit 'Delete', method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
      <% end %>
      </td>

     </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'New Memory', new_memory_path %>
