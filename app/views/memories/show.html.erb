<div class="memory" id="memory-<%= @memory.id %>">
  <div class="panel callout radius">
  <%= image_tag @memory.image.url, class: "memory-image" %>

  <p>
    <strong>Name:</strong>
    <%= @memory.name %>
  </p>

  <p>
    <strong>Keywords:</strong>
    <%= @memory.keywords %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @memory.description %>
  </p>
 </div>

<div class="row">
  <div class="large-8 columns">

  <h3> Comments: </h3>
  <% @replies.each do |reply| %>
    <div class="panel radius">
      <%= reply.body %> <br />
      <% if current_user.role == 'admin' %>
        <%= link_to 'Delete Comment', @reply, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    </div>
  <% end %>

  <%= render 'comments/form' %>

  </div>
  <div class="large-4 columns">
    <% @memory.related_memories.each do |related_memory| %>
      <div class="row">
        <div class="small-12 columns memory">
          <%= link_to(image_tag(related_memory[0].image.url), related_memory[0]) %>
        </div>
      </div>
    <% end %>
  </div>
</div>

  <% if current_user.role == 'admin' %>
      <%= link_to 'Delete Memory', @memory, method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
  <ul class="button-group">
    <% if policy(@memory).edit? %>
      <%= link_to 'Edit', edit_memory_path(@memory), class: "button" %> |
    <% end %>
    <%= link_to 'Back', memories_path, class: "button" %>
  </ul>
</div>
